  ssh:
    install-server: true
    authorized-keys:
      - ssh-ed25519 AAAA...  # your key here

  storage:
    config:
      - id: disk-system
        type: disk
        match:
          size: largest
        ptable: gpt
        wipe: superblock
        name: system
        grub_device: true

      - id: part-bios
        type: partition
        device: disk-system
        size: 1M
        flag: bios_grub


      - id: part-efi
        type: partition
        device: disk-system
        size: 1G
        wipe: superblock
        flag: boot

      - id: format-efi
        type: format
        volume: part-efi
        fstype: fat32
        label: efi


      - id: LinuxBoot
        type: partition
        device: disk-system
        size: 1G
        wipe: superblock

      - id: format-boot
        type: format
        volume: LinuxBoot
        fstype: ext4
        label: boot

      - id: luks-part
        type: partition
        device: disk-system
        size: -1
        wipe: superblock

      - id: luks-volume
        type: dm_crypt
        volume: luks-part
        key: "pass"

      - name: vg0
        type: lvm_volgroup
        devices: [luks-volume]
        preserve: false
        id: id_vg0

      - name: lv_swap
        type: lvm_partition
        volgroup: id_vg0
        size: 8G
        id: lv_swap

      - fstype: swap
        volume: lv_swap
        type: format
        id: format-swap

      - name: ubuntu-lv
        volgroup: id_vg0
        size: -1
        preserve: false
        type: lvm_partition
        id: lvm_partition-1

      - fstype: ext4
        volume: lvm_partition-1
        preserve: false
        type: format
        id: format-3

      - device: format-3
        path: /
        type: mount
        id: mount-lvm

      - device:  format-boot
        path: /boot
        type: mount
        id: mount-boot

      - device: format-efi
        path: /boot/efi
        type: mount
        id: mount-efi



    # the | means a multi line block of text
    # Run a literal, trace-enabled shell script block that exits on error: debug + strict mode heredoc
    late-commands:
      - |
        curtin in-target --target=/target -- bash -xe <<'EOF'
        echo "[*] Disabling network wait..."
        systemctl mask systemd-networkd-wait-online.service

        echo "[*] Disabling cloud-init..."
        echo -e "network:\n  config: disabled" > /etc/cloud/cloud.cfg.d/99-disable-network-wait.cfg
        touch /etc/cloud/cloud-init.disabled
        apt-get purge -y cloud-init

        echo "[*] Marking netplan interfaces optional..."
        for f in /etc/netplan/*.yaml; do
          sed -i "s/dhcp4: true/&\\n      optional: true/" "$f"
        done

        echo "[*] Disabling systemd wait..."
        mkdir -p /etc/systemd/system/systemd-networkd-wait-online.service.d
        echo -e "[Service]\nExecStart=\nExecStart=/bin/true" > /etc/systemd/system/systemd-networkd-wait-online.service.d/override.conf

        echo "[*] Configuring hibernate resume..."
        UUID=$(blkid -s UUID -o value /dev/mapper/vg0-lv_swap)
        echo "RESUME=UUID=$UUID" > /etc/initramfs-tools/conf.d/resume
        sed -i "s/^\(GRUB_CMDLINE_LINUX_DEFAULT=\".*\)\(\".*\)/\1 resume=UUID=$UUID\2/" /etc/default/grub

        echo "[*] Configuring serial console..."
        sed -i "s/^\(GRUB_CMDLINE_LINUX=\".*\)\(\".*\)/\1 console=ttyS0,115200n8\2/" /etc/default/grub
        sed -i "s/^#GRUB_TERMINAL=/GRUB_TERMINAL=serial/" /etc/default/grub
        sed -i "s/^#GRUB_SERIAL_COMMAND=/GRUB_SERIAL_COMMAND=\"serial --speed=115200 --unit=0 --word=8 --parity=no --stop=1\"/" /etc/default/grub
        systemctl enable serial-getty@ttyS0.service

        echo "[*] Updating grub and initramfs..."
        update-grub
        update-initramfs -u

        echo "[*] Done â€” exiting early."
        exit 1
        EOF
