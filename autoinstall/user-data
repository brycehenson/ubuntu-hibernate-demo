#cloud-config
autoinstall:
  version: 1
  identity:
    hostname: test-ubuntu
    username: ubuntu
    password: "$6$rounds=4096$example$3vme12UeCmzRU9HF8x0sM1O."  # 'ubuntu' hashed


  ssh:
    install-server: true
    authorized-keys:
      - ssh-ed25519 AAAA...  # your key here
  storage:
    config:
      - id: disk0
        type: disk
        ptable: gpt
        wipe: superblock
        match:
          size: largest

      - type: partition
        id: part-bios
        device: disk0
        size: 1M
        flag: bios_grub

      - type: partition
        id: part-efi
        device: disk0
        size: 512M
        flag: boot

      - id: boot-partition
        type: partition
        device: disk0
        size: 1G


      - id: encrypted-partition
        type: partition
        device: disk0
        size: -1

      - id: luks-volume
        type: dm_crypt
        volume: encrypted-partition
        key: "your-encryption-passphrase"

      - id: vg0
        type: lvm_volgroup
        name: ubuntu-vg
        devices: [luks-volume]

      - id: lv-root
        type: lvm_partition
        name: root
        volgroup: vg0
        size: 100%

      - id: fs-root
        type: format
        fstype: ext4
        volume: lv-root

      - id: mount-root
        type: mount
        device: fs-root
        path: /

      - id: fs-boot
        type: format
        fstype: ext4
        volume: boot-partition

      - id: mount-boot
        type: mount
        device: fs-boot
        path: /boot

      - id: fs-efi
        type: format
        fstype: fat32
        volume: part-efi

      - id: mount-efi
        type: mount
        device: fs-efi
        path: /boot/efi


    late-commands:
      - curtin in-target --target=/target -- bash -c 'echo "RESUME=UUID=$(blkid -s UUID -o value /dev/mapper/vg0-lv_swap)" > /etc/initramfs-tools/conf.d/resume'
      - curtin in-target --target=/target -- update-initramfs -u
